<div class="container">
	<div class="row-fluid">

		<div class="span12">
<h3>Upcoming Events</h3>

<table class="table blue">
  <tr>
    <th>Name</th>
	<th>Host</th>
	<th>Location</th>
    <th>Date</th>
	<th>Time</th>
    <th></th>
  </tr>

<% @upcoming_events.each do |event| %>
  <tr>
    <td><%= link_to "#{event.name}", event %></td>
	<td><%= link_to "#{event.host}", event %></td>
	<td><%= link_to "#{event.location}", event %></td>
    <td><%= link_to "#{event.start_at.strftime("%a, %-m/%d/%Y")}", event %></td>
	<td><%= link_to "#{event.start_at.strftime("%l:%M")} - #{event.end_at.strftime("%l:%M %p")}", event %></td>
    <td class ="gold"><%= link_to 'Details', event %></td>
  </tr>
<% end %>
</table>

<br />

<ul class="nav nav-pills">
	<li class="gold"><%= link_to 'New Event', new_event_path %></li>
</ul>

</div>
</div>
</div>

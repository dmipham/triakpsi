<div class="container">
	<div class="row-fluid">

		<div class="span12">
<h3>Upcoming Events</h3>

<table class="table">
  <tr>
    <th>Name</th>
	<th>Host</th>
    <th>Date</th>
	<th>Time</th>
    <th></th>
  </tr>

<% @events.each do |event| %>
  <tr>
    <td><%= link_to "#{event.name}", event %></td>
	<td><%= link_to "#{event.host}", event %></td>
    <td><%= link_to "#{event.start_at.strftime("%a, %-m/%d/%Y")}", event %></td>
	<td><%= link_to "#{event.start_at.strftime("%l:%M")} - #{event.end_at.strftime("%l:%M %p")}", event %></td>
    <td><%= link_to 'Details', event %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Event', new_event_path %>
</div>
</div>
</div>

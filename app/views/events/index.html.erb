<div class="container">
	<div class="row-fluid">

			<%= render "side_nav" %>

		<div class="span10">
<h1>Upcoming Events</h1>

<table class="table">
  <tr>
    <th>Name</th>
	<th>Host</th>
    <th>Date</th>
	<th>Time</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @events.each do |event| %>
  <tr>
    <td><%= event.name %></td>
	<td><%= event.host %></td>
    <td><%= event.start_at.strftime("%a, %-m/%d/%Y") %></td>
	<td><%= event.start_at.strftime("%l:%M")%> - <%= event.end_at.strftime("%l:%M %p")%></td>
    <td><%= link_to 'Show', event %></td>
    <td><%= link_to 'Edit', edit_event_path(event) %></td>
    <td><%= link_to 'Destroy', event, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Event', new_event_path %>
</div>
</div>
</div>

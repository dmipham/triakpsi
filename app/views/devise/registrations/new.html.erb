<div class="container">
	<div class="row-fluid">
		
		<div class="span12">
			
			<h2>Become a member!</h2>

			<b>Note: </b>If the form is not rendering properly, please update to a recent version of Internet Explorer or download an alternate browser. If you need an alternative, download <b><a href="https://www.google.com/intl/en/chrome/browser/index.html#eula" target="_blank">Google Chrome</a></b> for free <a href="https://www.google.com/intl/en/chrome/browser/index.html#eula" target="_blank">here</a>.
			
		<script type="text/javascript">
			$('[placeholder]').focus(function() {
			  var input = $(this);
			  if (input.val() == input.attr('placeholder')) {
			    input.val('');
			    input.removeClass('placeholder');
			  }
			}).blur(function() {
			  var input = $(this);
			  if (input.val() == '' || input.val() == input.attr('placeholder')) {
			    input.addClass('placeholder');
			    input.val(input.attr('placeholder'));
			  }
			}).blur().parents('form').submit(function() {
			  $(this).find('[placeholder]').each(function() {
			    var input = $(this);
			    if (input.val() == input.attr('placeholder')) {
			      input.val('');
			    }
			  })
			});
			</script>
			
			<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
			<%= devise_error_messages! %>
			
			<legend>Create your login</legend>
			<div><%= f.email_field :email , :placeholder => "Email" %></div>
		
			<div><%= f.password_field :password, :placeholder => "Password" %></div>

			<div><%= f.password_field :password_confirmation, :placeholder => "Confirm Password" %></div>
			
			<legend>Basic Info</legend>
				<p><%= f.text_field :first_name , :placeholder => "First Name" %>
				<%= f.text_field :last_name , :placeholder => "Last Name" %></p>
				
				<p><%= f.phone_field :phone , :placeholder => "Phone" %>
					<%= f.text_field :linkedin , :placeholder => "LinkedIn Address" %></p>
				<p><div class="input-prepend">
  <span class="add-on">@</span><%= f.text_field :twitter , :placeholder => "Twitter Handle" %></span></div>
				<%= f.text_field :website , :placeholder => "www.YourPersonalWebsite.com" %></p>
			<p><label>Birthday</label><%= f.date_select :birthday, :order => [:month, :day, :year], :start_year => 1900 %></p>
		<legend>School Info</legend>
			<p><label>Please specify your school and graduation year.</label>
				<%= f.text_field :school , :placeholder => "School" %>
				<%= f.select :grad_year , ('1900'..'2020').sort.reverse %></p>
			<p><label>Please specify the semester and year you pledged.</label>
				<%= f.select :pledge_semester , ['Pledge Semester','Fall', 'Spring'] %>
				<%= f.select :pledge_year , ('1900'..'2020').sort.reverse %></p>
		<legend>Professional Info</legend>
			<%= f.text_field :industry , :placeholder => "Industry" %>
			<%= f.text_field :company , :placeholder => "Company" %>
			<%= f.text_field :job_title , :placeholder => "Job Title" %>

						<div><%= f.submit "Join" %></div>
			<% end %>

<%= render "devise/shared/links" %>

</div>
</div>
</div>

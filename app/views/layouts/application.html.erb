<!DOCTYPE html>
<html>
<head>
  <title>Triangle AKPsi</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
  <!-- <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link href="assets/css/bootstrap-responsive.css" rel="stylesheet"> -->
</head>
<body>
	<div class="container">
	<div class="page-header">
		<div class="container">
		   <% if alert %>
		   		<p class="notice"><%= notice %></p>
		        <p class="alert"><%= alert %></p>	 
			<%end%>
		<p style="float: left;"><%= link_to image_tag("triakpsiLogo200.png"), root_path %></p>
		<div class="pull-right"><h1><small>Serving RTP and surrounding areas</small></h1></div>
		</div>
	</div>
		
		<script type="text/javascript">
		$(function(){
		     $('.dropdown-toggle').dropdown();
		});
		</script>

		
		<% if user_signed_in? %>
		<div class="pull-left">
		<ul class="nav nav-pills">
			
		  <li class="dropdown">
		    <a class="dropdown-toggle" data-toggle="dropdown" href="#">
					 Members <b class="caret white-caret"></b>
		    </a>
		    	<ul class="dropdown-menu">
						<li><%= link_to "Directory", members_path %></li>
						<li><%= link_to "Update Info", edit_member_path(current_user) %></li>		     
		    </ul>
		  </li>
			
		  <li class="dropdown">
		    <a class="dropdown-toggle" data-toggle="dropdown" href="#">
					 Events <b class="caret white-caret"></b>
		    </a>
		    	<ul class="dropdown-menu">
						<li><%= link_to "Calendar", calendar_path %></li>
						<li><%= link_to "Upcoming Events", events_path %></li>	
						<li><%= link_to "Add Event", new_event_path if current_user.admin? %></li>	     
		    </ul>
		  </li>
			
		  <li class="dropdown">
		    <a class="dropdown-toggle" data-toggle="dropdown" href="#">
					 Job Board <b class="caret white-caret"></b>
		    </a>
		    	<ul class="dropdown-menu">
						<li><%= link_to "View Positions", jobs_path %></li>
						<li><%= link_to "Post Position", new_job_path %></li>    
		    </ul>
		  </li>
			
		  <li class="dropdown">
		    <a class="dropdown-toggle" data-toggle="dropdown" href="#">
					 Minutes <b class="caret white-caret"></b>
		    </a>
		    	<ul class="dropdown-menu">
						<li><%= link_to "View Minutes", notes_path %></li>
						<li><%= link_to "Add Minutes", new_note_path if current_user.admin?%></li>    
		    </ul>
		  </li>
			
		</ul>
		
	</div>
	
	<div class="pull-right">
		<%= link_to image_tag("facebook.png"), "http://www.facebook.com/triangleakpsi" %>
		<%= link_to image_tag("twitter.png"), "http://www.twitter.com/triangleakpsi" %>
		<%= link_to image_tag("linkedin.png"), "http://www.linkedin.com/groups/triangleakpsi" %>
		<%= link_to image_tag("instagram.png"), "http://www..com/triangleakpsi" %>
	</div>
	
			<div class="pull-right">
				<%= link_to "Log out", destroy_user_session_path, {:method => "DELETE"} %>
			</div>
			</div>
		<%else%>
			<div class="pull-right">
				<%= link_to "Login", new_user_session_path %> | 
				<%= link_to "Join", new_user_registration_path %>
			</div>
		<%end%>
</div>


<%= yield %>

</body>
<div class="footer">
	<div class="container">
	
		<div class="row-fluid" style="height:20px">
		</div>

		<p style="float: left;">Copyright &copy; 2011-<%= Date.today.strftime("%Y") %> Triangle AKPsi<p>
			<p style="float: right;">Built by <a href="http://www.diemmipham.com/", target="_blank">Diemmi Pham</a>
	
		<div class="row-fluid" style="height:20px">
		</div>

	</div>
</div>
</html>
